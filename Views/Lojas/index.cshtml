@model List<CarrosMVC.Models.Loja>

<h1>Lista de Lojas</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Cidade</th>
            <th>UF</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var loja in Model)
        {
            <tr>
                <td>@loja.Id</td>
                <td>@loja.Nome</td>
                <td>@loja.Cidade</td>
                <td>@loja.UF</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@loja.Id" class="btn btn-primary">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Nova Loja</a>
