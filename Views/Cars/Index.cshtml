@model List<CarrosMVC.Models.Carro>

@{
    ViewData["Title"] = "Carros";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Marca</th>
            <th>Carroceria</th>
            <th>Ano</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var carro in Model)
        {
            <tr>
                <td>@carro.Id</td>
                <td>@carro.Nome</td>
                <td>@carro.Marca.Nome</td>
                <td>@carro.Carroceria.Nome</td>
                <td>@carro.Ano</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@carro.Id" class="btn btn-primary">Editar</a>
                    <a asp-action="Delete" asp-route-id="@carro.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Novo Carro</a>
