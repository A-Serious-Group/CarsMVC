@model CarrosMVC.Models.CarrosIndexViewModel

@{
    ViewData["Title"] = "Carros";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id Carro</th>
            <th>Nome Carro</th>
            <th>Marca</th>
            <th>Carroceria</th>
            <th>Ano</th>
            <th>Loja</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var carro in Model.Carros)
        {
            <tr>
                <td>@carro.Id</td>
                <td>@carro.Nome</td>
                <td>@carro.Marca.Nome</td>
                <td>@carro.Carroceria.Nome</td>
                <td>@carro.Ano</td>
                @foreach (var loja in Model.Lojas)
                {
                    if (loja.Id == carro.LojaIdentifier)
                    {
                        <td>@loja.Nome / @loja.Cidade-@loja.UF</td>
                    }
                }
                <td>
                    <a asp-action="Edit" asp-route-id="@carro.Id" class="btn btn-primary">Editar</a>
                    <a asp-action="Delete" asp-route-id="@carro.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Novo Carro</a>
